<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/svRoot_FL"
    android:scrollbars="none"
    android:padding="@dimen/main_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/minder_id_title_fl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/minder_id"
            style="@style/TextBig"/>
        <EditText
            android:id="@+id/minder_id_edit_text_fl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            style="@style/EditTextMinderId"
            android:layout_below="@+id/minder_id_title_fl"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/login_button_FL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/log_in"
            android:layout_below="@+id/minder_id_edit_text_fl"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            style="@style/ButtonStyle"/>

        <Button
            android:id="@+id/create_account_button_FL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_account"
            style="@style/ButtonStyle"
            android:layout_below="@+id/login_button_FL"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</ScrollView>