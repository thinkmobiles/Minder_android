<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">


    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_white</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/accent</item>

    </style>

    <!-- Splash screen style-->
    <style name="FullScreenTheme" parent="android:Theme.Holo.NoActionBar.Fullscreen">
        <item name="android:background">@color/gray_light</item>
    </style>

    <!-- ActionBar Style -->
    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">

        <item name="android:textSize">@dimen/text_big_size</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:titleTextStyle">@style/TitleColor</item>
    </style>

    <!-- Text style for ActionBar -->
    <style name="TitleColor" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/extra_big_text_size</item>
    </style>

    <!-- widgets components styles -->
    <style name="BaseEditText" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/editview_underline</item>
        <item name="android:textColor">@color/main_gray_trans</item>
        <item name="android:textSize">@dimen/text_medium_size</item>
    </style>


    <style name="TextExtraBig">
        <item name="android:textSize">@dimen/extra_big_text_size</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="TextBig">
        <item name="android:textSize">@dimen/text_big_size</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="TextMedium">
        <item name="android:textSize">@dimen/text_medium_size</item>
        <item name="android:textColor">@color/text_black</item>
    </style>
    
    <style name="ButtonStyle">
        <item name="android:textSize">@dimen/text_btn_size</item>
        <item name="android:textColor">#fff</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AlertDialogTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:background">@color/red</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="FCA_scroll_view">
        <item name="android:isScrollContainer">true</item>
        <item name="android:scrollbars">none</item>
        <item name="android:fadingEdgeLength">0dp</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:fillViewport">true</item>
    </style>

</resources>
